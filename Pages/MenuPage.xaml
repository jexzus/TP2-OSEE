<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tp2MauiApp.Pages.MenuPage"
             BackgroundImageSource="fondoapp.jpg">

    <ScrollView>
        <Grid Padding="20">
            <VerticalStackLayout VerticalOptions="Center"
                                 HorizontalOptions="Center"
                                 Spacing="40">

                <!-- Logo Principal -->
                <Image Source="logoosee1.png"
                       WidthRequest="250"
                       HeightRequest="120"
                       HorizontalOptions="Center"
                       Margin="0,20,0,40" />

                <!-- Contenedor de Botones -->
                <VerticalStackLayout HorizontalOptions="Center"
                                     Spacing="30"
                                     WidthRequest="350">

                    <!-- Botón Nueva Solicitud -->
                    <Frame BackgroundColor="Magenta"
                           CornerRadius="25"
                           HasShadow="True"
                           HorizontalOptions="Center"
                           WidthRequest="320"
                           HeightRequest="100">
                        <Frame.Shadow>
                            <Shadow Brush="Black"
                                    Offset="0,4"
                                    Radius="8"
                                    Opacity="0.3" />
                        </Frame.Shadow>

                        <Grid>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnNuevaSolicitudClicked" />
                            </Grid.GestureRecognizers>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Ícono sin círculo -->
                            <Image Source="mastramites.png"
                                   Grid.Column="0"
                                   WidthRequest="70"
                                   HeightRequest="70"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center" />

                            <!-- Texto -->
                            <Label Grid.Column="1"
                                   Text="Nueva&#10;Solicitud"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   HorizontalTextAlignment="Center" />
                        </Grid>
                    </Frame>

                    <!-- Botón Estado Solicitud -->
                    <Frame BackgroundColor="Magenta"
                           CornerRadius="25"
                           HasShadow="True"
                           HorizontalOptions="Center"
                           WidthRequest="320"
                           HeightRequest="100">
                        <Frame.Shadow>
                            <Shadow Brush="Black"
                                    Offset="0,4"
                                    Radius="8"
                                    Opacity="0.3" />
                        </Frame.Shadow>

                        <Grid>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnEstadoSolicitudClicked" />
                            </Grid.GestureRecognizers>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Ícono sin círculo -->
                            <Image Source="vertramites.png"
                                   Grid.Column="0"
                                   WidthRequest="70"
                                   HeightRequest="70"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center" />

                            <!-- Texto -->
                            <Label Grid.Column="1"
                                   Text="Estado&#10;Solicitud"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   HorizontalTextAlignment="Center" />
                        </Grid>
                    </Frame>

                </VerticalStackLayout>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
